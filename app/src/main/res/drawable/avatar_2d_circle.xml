<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/date_night_theme"
                android:centerColor="@color/date_night_purple"
                android:endColor="#FFFFFF"
                android:angle="90"/>
            <corners android:radius="100dp"/>
            <solid android:color="@color/date_night_transparent"/>
            <size android:width="100dp" android:height="100dp"/>
            <stroke android:width="1dp" android:color="@color/date_night_purple"/>
        </shape>
    </item>


</layer-list>