<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/newChatButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="@dimen/fab_right_constraint"
        android:layout_marginBottom="@dimen/fab_bottom_constraint"
        android:backgroundTint="@color/date_night_purple"
        android:clickable="true"
        android:onClick="startActivityToFindUser"
        app:backgroundTint="@color/date_night_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/emptyInboxImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.283"
        app:srcCompat="@drawable/ic_person" />

    <TextView
        android:id="@+id/emptyInboxTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="You donâ€™t have any chats, Click on\nthe add button to add someone and\nstart chatting"
        android:textColor="@color/date_night_grey"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:lineHeight="22dp"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/emptyInboxImageView"
        app:layout_constraintStart_toStartOf="@+id/emptyInboxImageView"
        app:layout_constraintTop_toBottomOf="@+id/emptyInboxImageView" />

    <ImageView
        android:id="@+id/image_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:foregroundGravity="center"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="@+id/newChatButton"
        app:layout_constraintStart_toStartOf="@+id/newChatButton"
        app:layout_constraintTop_toTopOf="@id/newChatButton"
        app:srcCompat="@drawable/ic_start_chat_24"
        tools:layout_editor_absoluteY="523dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inbox_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>